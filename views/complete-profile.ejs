<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/css/login-signup.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
</head>
<body>
    <%- include('topbar') %>
    <div class="container">
        <div class="form-container">
            <form class="form" id="complete-profile-form" action="/auth/complete-profile" method="POST">
                <div class="flex-column">
                    <label>First Name</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="firstname" class="input" placeholder="First Name" required>
                </div>

                <div class="flex-column">
                    <label>Last Name</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="lastname" class="input" placeholder="Last Name" required>
                </div>

                <div class="flex-column">
                    <label>Mobile Number</label>
                </div>
                <div class="inputForm otp-section">
                    <input type="tel" id="signup-mobile" name="mobile" class="input" placeholder="Mobile Number" required>
                    <button type="button" class="otp-button" id="send-phone-otp-button" onclick="sendOtp('phone')">Send OTP to Phone</button>
                </div>
                <div class="inputForm" id="phone-otp-container" style="display:none;">
                    <input type="text" id="signup-phone-otp" class="input" placeholder="Enter Phone OTP" >
                    <button type="button" class="verify-button otp-button" id="verify-phone-otp-button" onclick="verifyOtp('phone')">Verify OTP</button>
                </div>

                <div class="flex-column">
                    <label>Address Field 1</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="address1" class="input" placeholder="Address Field 1" required>
                </div>

                <div class="flex-column">
                    <label>Address Field 2</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="address2" class="input" placeholder="Address Field 2">
                </div>

                <div class="flex-column">
                    <label>Town/City</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="city" class="input" placeholder="Town/City" required>
                </div>

                <div class="flex-column">
                    <label>State</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="state" class="input" placeholder="State" required>
                </div>

                <div class="flex-column">
                    <label>Country</label>
                </div>
                <div class="inputForm">
                    <select name="country" class="input" required>
                        <option value="">Select Country</option>
                        <option value="India">India</option>
                        <!-- Populate with countries -->
                    </select>
                </div>

                <div class="flex-column">
                    <label>Pin Code</label>
                </div>
                <div class="inputForm">
                    <input type="text" name="pincode" class="input" placeholder="Pin Code" required>
                </div>

                <div class="flex-column">
                    <label>Password</label>
                </div>
                <div class="inputForm">
                    <input type="password" class="input password-field" name="password" placeholder="Password">
                    <svg class="toggle-password-visibility" viewBox="0 0 576 512" height="1em" xmlns="http://www.w3.org/2000/svg">
                        <path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"></path>
                    </svg>
                </div>

                <button type="submit" class="button-submit">Complete Profile</button>
            </form>
        </div>
    </div>
    <%- include('footbar') %>
    <script>
        document.getElementById('complete-profile-form').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
            console.log('Form submitted');
            console.log('Form data:', new FormData(this));
            this.submit(); // Proceed with form submission
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="/js/login-signup.js"></script>
</body>
</html>
