<script>


// home.js
document.addEventListener('DOMContentLoaded', function() {
    const productContainer = document.querySelector('.product-container');
    const products = document.querySelectorAll('.product');

    function updateActiveProduct() {
        let center = productContainer.offsetWidth / 2;
        let closest = null;
        let closestDistance = Infinity;

        products.forEach(product => {
            let productCenter = product.getBoundingClientRect().left + product.offsetWidth / 2;
            let distance = Math.abs(center - productCenter);

            if (distance < closestDistance) {
                closestDistance = distance;
                closest = product;
            }
        });

        products.forEach(product => product.classList.remove('active'));
        if (closest) closest.classList.add('active');
    }

    productContainer.addEventListener('scroll', updateActiveProduct);

    products.forEach(product => {
        product.addEventListener('click', () => {
            products.forEach(p => p.classList.remove('active'));
            product.classList.add('active');

            const centerIndex = Array.from(products).indexOf(product);
            const offset = productContainer.offsetWidth / 2 - product.offsetWidth / 2;
            const scrollPosition = product.offsetLeft - offset;

            productContainer.scrollTo({
                left: scrollPosition,
                behavior: 'smooth'
            });

            if (product.classList.contains('active')) {
                window.location.href = '/shop';
            }
        });
    });

    // Initial active product
    updateActiveProduct();
});

